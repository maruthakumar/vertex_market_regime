# Market Regime Framework Environment Configuration
# Copy this file to .env and customize for your environment

# ============================================================================
# ENVIRONMENT CONFIGURATION
# ============================================================================

# Environment type: development, staging, production, testing
MARKET_REGIME_ENV=development

# ============================================================================
# DATA PATHS CONFIGURATION
# ============================================================================

# Production data path - main source of parquet files
MARKET_REGIME_DATA_PATH=/Users/maruth/projects/market_regime/data/nifty_validation/backtester_processed

# Backup data path (optional)
MARKET_REGIME_BACKUP_DATA_PATH=

# Output path for results and processed data
MARKET_REGIME_OUTPUT_PATH=/Users/maruth/projects/market_regime/output

# Cache path for temporary processing files
MARKET_REGIME_CACHE_PATH=/Users/maruth/projects/market_regime/output/cache

# Temporary path for intermediate files
MARKET_REGIME_TEMP_PATH=/Users/maruth/projects/market_regime/output/temp

# ============================================================================
# GOOGLE CLOUD CONFIGURATION
# ============================================================================

# Google Cloud Project ID
GCP_PROJECT_ID=arched-bot-269016

# Google Cloud Region
GCP_REGION=us-central1

# Google Cloud Storage bucket
GCS_BUCKET=vertex-mr-development-data

# Vertex AI endpoint (optional)
VERTEX_AI_ENDPOINT=

# BigQuery dataset
BIGQUERY_DATASET=market_regime_development

# Use Google Secret Manager for credentials
USE_SECRET_MANAGER=true

# ============================================================================
# PERFORMANCE CONFIGURATION  
# ============================================================================

# Component processing time budget (milliseconds)
COMPONENT_PROCESSING_BUDGET_MS=120

# Component memory budget (megabytes)
COMPONENT_MEMORY_BUDGET_MB=280

# Enable GPU acceleration
GPU_ENABLED=false

# Maximum number of worker threads
MAX_WORKERS=2

# Processing batch size
BATCH_SIZE=100

# ============================================================================
# COMPONENT-SPECIFIC CONFIGURATION
# ============================================================================

# Component 2 specific settings
COMPONENT_02_GAMMA_WEIGHT=1.5
COMPONENT_02_FEATURE_COUNT=98

# Component 3 specific settings  
COMPONENT_03_OI_STRIKES_RANGE=7
COMPONENT_03_FEATURE_COUNT=105

# ============================================================================
# MONITORING AND LOGGING
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable Prometheus metrics
PROMETHEUS_METRICS_ENABLED=true

# Prometheus metrics port
PROMETHEUS_METRICS_PORT=9090

# Enable performance profiling
PERFORMANCE_PROFILING_ENABLED=false

# ============================================================================
# DEVELOPMENT/TESTING CONFIGURATION  
# ============================================================================

# Enable development mode features
DEV_MODE=true

# Skip expensive validations in development
SKIP_VALIDATIONS=false

# Use mock data for testing
USE_MOCK_DATA=false

# Reduce processing for faster development
FAST_MODE=false

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# API authentication key (use Secret Manager in production)
API_KEY=dev-api-key-12345

# JWT secret key (use Secret Manager in production) 
JWT_SECRET=dev-jwt-secret

# Enable CORS for development
CORS_ENABLED=true

# ============================================================================
# EXAMPLE PRODUCTION CONFIGURATION
# ============================================================================

# For production deployment, use values like:
# MARKET_REGIME_ENV=production
# MARKET_REGIME_DATA_PATH=/data/production/market_regime/parquet
# MARKET_REGIME_OUTPUT_PATH=/data/production/market_regime/output
# GCP_PROJECT_ID=arched-bot-269016
# GCS_BUCKET=vertex-mr-production-data
# COMPONENT_PROCESSING_BUDGET_MS=120
# COMPONENT_MEMORY_BUDGET_MB=280
# GPU_ENABLED=true
# MAX_WORKERS=8
# BATCH_SIZE=1000
# USE_SECRET_MANAGER=true
# LOG_LEVEL=INFO
# PROMETHEUS_METRICS_ENABLED=true