# Terraform Variables Example File
# Copy this to terraform.tfvars and update with your actual values
# Version: 1.0
# Date: 2025-08-10

# REQUIRED VARIABLES - Must be set for deployment
project_id         = "your-gcp-project-id"
billing_account_id = "123456-789012-345678"

# ENVIRONMENT CONFIGURATION
environment = "dev"  # Options: dev, staging, prod
region      = "us-central1"
zone        = "us-central1-a"

# COST MANAGEMENT
cost_budget_amount = 500  # Monthly budget in USD

# VERTEX AI CONFIGURATION
vertex_ai_config = {
  machine_type = "n1-standard-4"
  gpu_type     = "NVIDIA_TESLA_T4"
  gpu_count    = 1
  disk_size_gb = 100
}

# BIGQUERY CONFIGURATION
bigquery_config = {
  location                    = "US"
  default_table_expiration_ms = 7776000000  # 90 days
}

# CLOUD STORAGE CONFIGURATION
storage_config = {
  location      = "US-CENTRAL1"
  storage_class = "STANDARD"
  versioning    = true
}

# NETWORK CONFIGURATION
network_config = {
  subnet_cidr           = "10.1.0.0/24"
  services_cidr         = "10.1.1.0/24"
  enable_private_access = true
}

# MONITORING CONFIGURATION
monitoring_config = {
  email_address                = "your-admin-email@company.com"
  cost_alert_threshold         = 100      # USD threshold for cost alerts
  performance_alert_threshold  = 1000     # Milliseconds threshold for latency alerts
}

# SECURITY CONFIGURATION
security_config = {
  allowed_ip_ranges = [
    "0.0.0.0/0"  # SECURITY WARNING: Restrict this to your IP ranges in production
    # Example: ["203.0.113.0/24", "198.51.100.0/24"]  # Replace with your office IP ranges
  ]
  enable_audit_logs = true
}

# DATA RETENTION CONFIGURATION
data_retention_config = {
  raw_data_retention_days     = 180  # 6 months for raw market data
  feature_data_retention_days = 365  # 1 year for engineered features
  model_retention_days        = 90   # 3 months for ML model versions
}

